{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client"
        ],
        // ++ 这里加上baseUrl 和 path即可 ++
        "baseUrl": "./",
        "paths": {
            "@": [
                "src"
            ],
            // 根据别名配置相关路径
            "@axios/*": [
                "src/axios/*"
            ],
            "@router/*": [
                "src/router/*"
            ],
            "@config": [
                "src/store/config.js"
            ],
        }
        },
        "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}